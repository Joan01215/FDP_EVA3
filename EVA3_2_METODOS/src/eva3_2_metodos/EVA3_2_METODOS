package eva3_2_metodos;

import java.util.Scanner;

public class EVA3_2_METODOS {

    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        String mensaje;
        int valor;
        System.out.println("Cpatra el mensaje");
        mensaje = input.nextLine();
        System.out.println("Captura el numero de repeticiones");
        valor = input.nextInt();
        imprimirMnesaje(mensaje, valor);
    }
    public static void imprimirMnesaje(String mensaje, int repeticiones){
        for(int i = 0; i < repeticiones; i++){
            System.out.println(mensaje);
        }
    }
}
